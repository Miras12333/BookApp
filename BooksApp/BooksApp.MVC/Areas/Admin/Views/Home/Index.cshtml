@model List<OrderViewModel>
@{
    ViewData["Title"] = "Index";
}
<div class="pagetitle">
    <h1>Панель администратора</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Админ</a></li>
            <li class="breadcrumb-item active">Панель</li>
        </ol>
    </nav>
</div><!-- Конец заголовка страницы -->

<section class="section dashboard">
    <div class="row">

        <!-- Левая часть -->
        <div class="col-lg-6">
            <div class="row">
                <!-- Карточка продаж -->
                <div class="col-xxl-4 col-md-6">
                    <div class="card info-card sales-card">

                        <div class="filter">
                            <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                <li class="dropdown-header text-start">
                                    <h6>Фильтр</h6>
                                </li>

                                <li><a class="dropdown-item" href="#">Сегодня</a></li>
                                <li><a class="dropdown-item" href="#">В этом месяце</a></li>
                                <li><a class="dropdown-item" href="#">В этом году</a></li>
                            </ul>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title">Продажи <span>| Сегодня</span></h5>

                            <div class="d-flex align-items-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                    <i class="bi bi-cart"></i>
                                </div>
                                <div class="ps-3">
                                    <h6>145</h6>
                                    <span class="text-success small pt-1 fw-bold">12%</span> <span class="text-muted small pt-2 ps-1">рост</span>

                                </div>
                            </div>
                        </div>

                    </div>
                </div><!-- Конец Карточка продаж -->
                <!-- Карточка доходов -->
                <div class="col-xxl-4 col-md-6">
                    <div class="card info-card revenue-card">

                        <div class="filter">
                            <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                <li class="dropdown-header text-start">
                                    <h6>Фильтр</h6>
                                </li>

                                <li><a class="dropdown-item" href="#">Сегодня</a></li>
                                <li><a class="dropdown-item" href="#">В этом месяце</a></li>
                                <li><a class="dropdown-item" href="#">В этом году</a></li>
                            </ul>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title">Доходы <span>| В этом месяце</span></h5>

                            <div class="d-flex align-items-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                    <i class="bi bi-currency-dollar"></i>
                                </div>
                                <div class="ps-3">
                                    <h6>$3,264</h6>
                                    <span class="text-success small pt-1 fw-bold">8%</span> <span class="text-muted small pt-2 ps-1">рост</span>

                                </div>
                            </div>
                        </div>

                    </div>
                </div><!-- Конец Карточка доходов -->
                <!-- Карточка клиентов -->
                <div class="col-xxl-4 col-xl-12">

                    <div class="card info-card customers-card">

                        <div class="filter">
                            <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                <li class="dropdown-header text-start">
                                    <h6>Фильтр</h6>
                                </li>

                                <li><a class="dropdown-item" href="#">Сегодня</a></li>
                                <li><a class="dropdown-item" href="#">В этом месяце</a></li>
                                <li><a class="dropdown-item" href="#">В этом году</a></li>
                            </ul>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title">Клиенты <span>| В этом году</span></h5>

                            <div class="d-flex align-items-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                    <i class="bi bi-people"></i>
                                </div>
                                <div class="ps-3">
                                    <h6>1244</h6>
                                    <span class="text-danger small pt-1 fw-bold">12%</span> <span class="text-muted small pt-2 ps-1">падение</span>

                                </div>
                            </div>

                        </div>
                    </div>

                </div><!-- Конец Карточка клиентов -->
            </div>
        </div><!-- Конец Левой части -->
        <!-- Правая часть -->
        <div class="col-lg-6">
            <!-- Последние продажи -->
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="filter">
                        <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                            <li class="dropdown-header text-start">
                                <h6>Фильтр</h6>
                            </li>
                            <li><a class="dropdown-item" href="#">Сегодня</a></li>
                            <li><a class="dropdown-item" href="#">В этом месяце</a></li>
                            <li><a class="dropdown-item" href="#">В этом году</a></li>
                        </ul>
                    </div>

                    <div class="card-body">
                        <h5 class="card-title">Последние продажи</h5>

                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th scope="col">Дата</th>
                                    <th scope="col">Имя Фамилия</th>
                                    <th scope="col">Сумма</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td>@order.OrderDate</td>
                                        <td>@order.FirstName @order.LastName</td>
                                        <td>
                                            @{
                                                decimal? total = 0;
                                                foreach (var orderItem in order.OrderItems)
                                                {
                                                    total += (orderItem.ItemPrice * orderItem.Quantity);
                                                }
                                            }
                                            @($"{total:C2}")
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>

                </div>
            </div><!-- Конец Последние продажи -->
        </div>
    </div>
</section>
@section Scripts{
    <script>
        function search(e){
            document.getElementById('formSearch').submit();
        }
    </script>
}

@model List<RoleViewModel>
@{
    List<RoleViewModel> roles = Model;
}

<div class="container-fluid mt-3">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="display-6">Список ролей</h1>
        <div class="d-flex flex-row align-items-end gap-5">
            <div>
                <a class="btn btn-success"
                   asp-area="Admin"
                   asp-controller="Roles"
                   asp-action="Create">Добавить роль</a>
            </div>
        </div>
    </div>
    <hr />
    @if (roles.Count == 0)
    {
        <div class="alert alert-warning">
            Не найдено никакой информации о ролях!
        </div>
    }
    else
    {
        <table id="myDataTable" class="table table-bordered table-sm">
            <thead class="text-bg-success">
                <tr>
                    <th>Название</th>
                    <th>Описание</th>
                    <th width="240">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in roles)
                {
                    <tr>
                        <td class="align-middle">@role.Name</td>
                        <td class="align-middle">@role.Description</td>
                        <td class="align-middle">
                            <a class="btn btn-warning btn-sm"
                       asp-area="Admin"
                       asp-controller="Roles"
                       asp-action="Edit"
                       asp-route-id=@role.Id>Редактировать</a>
                            <a class="btn btn-outline-danger btn-sm"
                       asp-area="Admin"
                       asp-controller="Roles"
                       asp-action="Delete"
                       asp-route-id=@role.Id>Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
</div>

@section Styles{
    @await Html.PartialAsync("_DataTablesStylesPartialView")
}
@section Scripts{
    @await Html.PartialAsync("_DataTablesScriptsPartialView")
}
